# University Chatbot - Environment Variables Example
# Copy this file to .env and fill in the values

# ============================================
# Frontend (React/Vite)
# ============================================
VITE_API_URL=http://localhost:3000
VITE_NLP_URL=http://localhost:8000

# ============================================
# Backend (NestJS)
# ============================================
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/university_chatbot
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=university_chatbot

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:8080

# NLP Service
NLP_SERVICE_URL=http://localhost:8000

# ============================================
# NLP Service (FastAPI)
# ============================================
NLP_PORT=8000
NLP_HOST=0.0.0.0

# Model Configuration
MODEL_PATH=./models
EMBEDDING_MODEL=labse
INTENT_MODEL_PATH=./models/intent_classifier

# Vector Database
VECTOR_DB_PATH=./data/vector_db
VECTOR_DB_TYPE=faiss

# Language Detection
LANG_DETECTION_ENABLED=true

# ============================================
# Docker
# ============================================
COMPOSE_PROJECT_NAME=university-chatbot
